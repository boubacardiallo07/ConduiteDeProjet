{% extends "layouts/base.html.twig" %}
{% block title 'Login' %}
{% block body %}
	<h1>Log In</h1>
	<form novalidate method="POST">
		<div>
			<label for="email">Username</label><br>
			<input type="email" id="email" name="email" value="{{app.session.get('App\Controller\\SecurityController::LAST_EMAIL')}}" required autofocus>
		</div>
		<div>
			<label for="password">Password</label><br>
			<input type="password" id="password" name="password" required>
		</div>

		<div>
			<label for="_remember_me">
				<input type="checkbox" id="_remember_me" name="_remember_me">
				Garder ma session active
			</label>

		</div>
		<input type="hidden" name="csrf_token" value="{{csrf_token('login_form')}}">

		<input class="btn btn-primary" type="submit" value="Sign In">
	</form>
{% endblock %}
