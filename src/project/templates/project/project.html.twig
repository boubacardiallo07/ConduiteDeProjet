{% extends "layouts/base.html.twig" %}
{% block title 'Project' %}
{% block head %}
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
	<link rel="stylesheet" href="style.css">
{% endblock %}


{% block body %}

	{% if projects|length > 0 %}

		<div class="card-group">
			{% for project in projects %}
				<div class="card">
					<div class="card-body" ">
						<h5 class="card-title">{{project.title}}</h5>
						<p class="card-text">
							{{project.backlogProduct}}</p>
						<p class="card-text">
							<small class="text-muted">Created on
								{{project.creationDate|date("m/d/Y")}}
							</small>
						</p>
						{# {{dump(project)}} #}
						<a class="btn btn-success" href="{{ path ('app_list_sprint', {'projectId' : project.id})}}">open</a>


					</div>

				</div>
			{% endfor %}

		</div>
	{% else %}
		<p>
			Sorry no project yet please create a new project to start!
		</p>
		<a class="btn btn-success" href="{{ path('app_createProject') }} ">create</a>
	{% endif %}
{% endblock %}
